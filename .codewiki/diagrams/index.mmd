    class CodeStructure {
        <<interface>>
        +file: string
        +classes: ClassInfo[]
        +functions: FunctionInfo[]
        +interfaces: InterfaceInfo[]
        +imports: ImportInfo[]
        +exports: any
    }

    class ClassInfo {
        <<interface>>
        +name: string
        +methods: FunctionInfo[]
        +properties: string[]
    }

    class FunctionInfo {
        <<interface>>
        +name: string
        +parameters: string[]
        +returnType: string
    }

    class InterfaceInfo {
        <<interface>>
        +name: string
        +properties: string[]
    }

    class ImportInfo {
        <<interface>>
        +moduleSpecifier: string
        +namedImports: string[]
        +defaultImport: string
    }

    GitState *-- GitStatus : status
    GitState *-- BranchInfo : branch

    CodeStructure *-- ClassInfo : classes
    CodeStructure *-- FunctionInfo : functions
    CodeStructure *-- InterfaceInfo : interfaces
    CodeStructure *-- ImportInfo : imports

    ClassInfo *-- FunctionInfo : methods
