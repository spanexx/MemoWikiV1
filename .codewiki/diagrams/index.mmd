    class BranchInfo {
        <<interface>>
        +current: string
        +upstream: string
        +ahead: number
        +behind: number
    }

    class GitState {
        <<interface>>
        +status: GitStatus
        +diff: any
        +recentCommit: any
        +branch: BranchInfo
        +conflicts: any
